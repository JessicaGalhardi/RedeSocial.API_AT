@model IEnumerable<RedeSocial.BLL.Models.ProfileUser>

@{
    ViewData["Title"] = "Index";
}




<div id="ctProf" class="container-fluid">

    <div class="card mx-auto text-center">
        <div class="card-body">
            <div class="row">

                <div class="col-md-12">
                    <table class="table">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Nome)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Sobrenome)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Email)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Apelido)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.FotoPerfil)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.DataNascimento)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Genero)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Pronome)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Cidade)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Bio)
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Nome)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Sobrenome)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Email)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Apelido)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.FotoPerfil)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.DataNascimento)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Genero)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Pronome)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Cidade)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Bio)
                                        </td>
                                        <td>

                                            <a asp-action="Details" asp-route-id="@item.Id" style="background-color:darkblue">Details</a> |

                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                </div>
            </div>
        </div>
    </div>
</div>